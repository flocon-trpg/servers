        "@types/color": "^3.0.2",
        "@types/express": "^4.17.13",
        "@types/fs-extra": "^9.0.13",
        "@types/inquirer": "8.1.3",
        "@types/lodash": "^4.14.175",
        "@types/multer": "^1.4.7",
        "@types/node": "^14.0.0",
        "@types/safe-compare": "^1.1.0",
        "@types/sharp": "^0.29.2",
        "@types/uuid": "^8.3.1",
        "@types/ws": "^8.0.0",
        "@types/yargs": "^17.0.3",
        "apollo-server-express": "^3.3.0",
        "bcdice": "^3.3.0",
        "bcrypt": "^5.0.1",
        "check-disk-space": "^3.0.1",
        "class-validator": "^0.13.1",
        "color": "^4.0.1",
        "dotenv": "^10.0.0",
        "dotenv-expand": "^5.1.0",
        "express": "^4.17.1",
        "firebase-admin": "^10.0.0",
        "fp-ts": "^2.11.5",
        "fs-extra": "^10.0.0",
        "graphql": "^15.6.0",
        "graphql-ws": "^5.5.0",
        "immer": "^9.0.6",
        "inquirer": "^8.2.0",
        "io-ts": "^2.2.16",
        "io-ts-reporters": "^2.0.0",
        "lodash": "^4.17.21",
        "multer": "^1.4.3",
        "nodemon": "^2.0.13",
        "npm-run-all": "^4.1.5",
        "rate-limiter-flexible": "^2.3.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "3.0.2",
        "rxjs": "^7.3.0",
        "safe-compare": "^1.1.4",
        "sanitize-filename": "^1.6.3",
        "sharp": "^0.29.1",
