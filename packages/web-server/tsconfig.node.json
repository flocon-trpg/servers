{
    "compilerOptions": {
        "resolveJsonModule": false,
        "target": "ES2017",
        "module": "commonjs",
        "lib": ["es2019"],
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules"],
    "include": ["./*.ts"]
}
