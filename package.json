{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "postinstall": "husky install",
        "build": "yarn workspaces foreach -ptv run build",
        "dist": "yarn workspaces foreach -ptv run dist",
        "dist-s": "yarn workspaces foreach -tv run dist",
        "test": "yarn workspaces foreach -pv run test",
        "lint": "eslint \"packages/**/*.{ts,tsx}\"",
        "prettier": "yarn prettier:base --write",
        "prettier:base": "prettier \"**/*.{ts,js,json,yml,md}\""
    },
    "dependencies": {
        "husky": "^7.0.4"
    },
    "devDependencies": {
        "@commitlint/cli": "14.1.0",
        "@commitlint/config-conventional": "14.1.0",
        "@typescript-eslint/eslint-plugin": "5.3.0",
        "@typescript-eslint/parser": "5.3.0",
        "eslint": "8.2.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-react": "7.26.1",
        "eslint-plugin-react-hooks": "next",
        "prettier": "2.4.1"
    },
    "dependenciesMeta": {
        "@react-spring/core": {
            "built": false
        }
    }
}
