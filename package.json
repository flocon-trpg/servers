{
    "dependencies": {
        "@graphql-codegen/cli": "^1.21.8",
        "@graphql-codegen/typescript": "^1.23.0",
        "@graphql-codegen/typescript-operations": "^1.18.4",
        "@graphql-codegen/typescript-react-apollo": "^2.3.1",
        "@kizahasi/flocon-core": "^0.15.5",
        "@kizahasi/ot-string": "^0.2.2",
        "@kizahasi/result": "^0.3.0",
        "@kizahasi/util": "^0.3.0",
        "@mikro-orm/core": "^4.5.7",
        "@mikro-orm/migrations": "^4.5.7",
        "@mikro-orm/postgresql": "^4.5.7",
        "@mikro-orm/sqlite": "^4.5.7",
        "@types/color": "^3.0.2",
        "@types/lodash": "^4.14.171",
        "@types/node": "^12",
        "@types/uuid": "^8.3.1",
        "@types/ws": "^7.4.7",
        "@types/yargs": "^17.0.2",
        "apollo-server-express": "^3.1.1",
        "bcdice": "^3.3.0",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.13.1",
        "color": "^4.0.0",
        "firebase-admin": "^9.11.0",
        "graphql": "^15.5.1",
        "graphql-ws": "^5.3.0",
        "immer": "^9.0.5",
        "lodash": "^4.17.21",
        "node-cache": "^5.1.2",
        "nodemon": "^2.0.12",
        "npm-run-all": "^4.1.5",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.3.0",
        "ts-node": "^10.1.0",
        "type-graphql": "^1.1.1",
        "typescript": "^4.3.5",
        "yargs": "^17.0.1"
    },
    "devDependencies": {
        "@types/jest": "^26.0.24",
        "@typescript-eslint/eslint-plugin": "^4.28.5",
        "@typescript-eslint/parser": "^4.28.5",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.2.0",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^7.0.1",
        "jest": "^27.0.6",
        "prettier": "^2.3.2",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.0.4"
    },
    "engines": {
        "node": "14.x"
    },
    "prettier": {
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4,
        "endOfLine": "crlf",
        "arrowParens": "avoid"
    },
    "scripts": {
        "dev": "node dist/index.js",
        "build": "tsc",
        "build-release": "rimraf ./dist && tsc",
        "gen": "run-s gen:schema gen:codegen",
        "gen:codegen": "graphql-codegen --config codegen.yml",
        "gen:schema": "ts-node run-buildSchemaSync.ts",
        "start": "node dist/index.js",
        "migration-check": "ts-node run-migrationCheck.ts",
        "migration-create": "ts-node run-migrationCreate.ts",
        "migration-up": "ts-node run-migrationUp.ts",
        "migration-down": "ts-node run-migrationDown.ts",
        "test": "jest",
        "watch": "run-p watch:*",
        "watch:codegen": "graphql-codegen --config codegen.yml --watch",
        "watch:schema": "nodemon --config nodemon.buildSchema.json",
        "watch:node": "nodemon --config nodemon.node.json",
        "prepare": "husky install",
        "prettier": "prettier --write \"src/**/*.ts\""
    },
    "license": "MIT"
}
